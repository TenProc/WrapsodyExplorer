<Window x:Class="fWrapsodyExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:fWrapsodyExplorer"
        xmlns:controls="clr-namespace:fWrapsodyExplorer.Controls"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        AllowsTransparency="False"
        Title="Wrapsody Explorer" Height="778" Width="1300">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ScrollViewer.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid Margin="30,30,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>


        <TreeView x:Name="_treeView"
                Grid.Column="0"
                Grid.Row="1"
                BorderThickness="0"
                SelectedItemChanged="OnTreeViewSelectionChanged"
                ItemsSource="{Binding Tree}">
            <TreeView.Resources>
                <Style TargetType="ScrollViewer"
                   BasedOn="{StaticResource LiveExplorerScrollViewerStyle}" />
            </TreeView.Resources>
        </TreeView>

        <Button Grid.Column="0"
                Grid.Row="0"
                Content="랩소디 정보 업데이트"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="168"
                Click="ButtonClickedUpdateAllSyncInfos"/>

        <ListView Grid.Column="1"
                  Grid.Row="1"
                  x:Name="SyncDocList">
            <GridView>
                <GridViewColumn Header="파일 이름" Width="200" DisplayMemberBinding="{Binding fName}"/>
                <GridViewColumn Header="버전 정보" Width="100" DisplayMemberBinding="{Binding verInfo}"/>
                <GridViewColumn Header="리비전 상태" Width="100" DisplayMemberBinding="{Binding revStatus}"/>
                <GridViewColumn Header="파일 경로" Width="300" DisplayMemberBinding="{Binding fPath}"/>
            </GridView>
        </ListView>
    </Grid>
</Window>
